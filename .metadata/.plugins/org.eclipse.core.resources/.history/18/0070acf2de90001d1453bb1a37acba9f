package task;

public class Array{
	
	public static void main(String[] args) {
		
		Array ar = new Array();
		

		int []x = {1,7,2,5,-9,-11};
		int sum = 8;
		ar.arraySum(x , sum);
		
		
	}

	public void arraySum(int[] b, int sumValue) {
		for (int i = 0; i < b.length-1; i++) {
			for (int j =i+1; j < b.length; j++) {
				if(b[i]+b[j]==sumValue) {
					System.out.println("i:  " + b[i] + ",  j:  " + [j]);
				}
			}
		}
	}
}